<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Include AOSP -->
  <include name="aosp.xml" />

  <!-- Define remotes -->
  <remote  name="github"
           fetch="https://github.com/"
           revision="aosp-8.1" />

  <!-- Remove other devices -->
  <remove-project name="device/generic/mini-emulator-armv7-a-neon" />
  <remove-project name="device/asus/fugu" />
  <remove-project name="device/asus/fugu-kernel" />
  <remove-project name="device/google/dragon" />
  <remove-project name="device/google/dragon-kernel" />
  <remove-project name="device/htc/flounder" />
  <remove-project name="device/htc/flounder-kernel" />
  <remove-project name="device/huawei/angler" />
  <remove-project name="device/huawei/angler-kernel" />
  <remove-project name="device/intel/edison" />
  <remove-project name="device/lge/bullhead" />
  <remove-project name="device/lge/bullhead-kernel" />
  <remove-project name="device/linaro/hikey" />
  <remove-project name="device/linaro/hikey-kernel" />
  <remove-project name="device/moto/shamu" />
  <remove-project name="device/moto/shamu-kernel" />

  <!-- Replace build project to build kernel inline from the source -->
  <remove-project name="platform/build" />
  <project path="build" name="Unlegacy-Android/android_build" remote="github" groups="pdk" >
    <copyfile src="core/root.mk" dest="Makefile" />
  </project>

  <!-- GCC 4.8 Toolchain -->
  <project path="prebuilts/gcc/linux-x86/arm/arm-eabi-4.8" name="platform/prebuilts/gcc/linux-x86/arm/arm-eabi-4.8" revision="master" />

  <!-- Grouper device and kernel -->
  <project path="kernel/asus/grouper" name="Unlegacy-Android/android_kernel_asus_grouper" remote="github" />
  <project path="device/asus/grouper" name="Unlegacy-Android/android_device_asus_grouper" remote="github" />
  <project path="device/asus/tilapia" name="Unlegacy-Android/android_device_asus_tilapia" remote="github" />

  <!-- Grouper vendor repositories -->
  <project path="vendor/asus" name="Unlegacy-Android/proprietary_vendor_asus" remote="github" />
  <project path="vendor/broadcom" name="Unlegacy-Android/proprietary_vendor_broadcom" remote="github" />
  <project path="vendor/invensense" name="Unlegacy-Android/proprietary_vendor_invensense" remote="github" />
  <project path="vendor/nvidia" name="Unlegacy-Android/proprietary_vendor_nvidia" remote="github" />
  <project path="vendor/widevine" name="Unlegacy-Android/proprietary_vendor_widevine" remote="github" />

</manifest>
